# JD Jones RAG System - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=JD Jones RAG System
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# ===========================================
# API KEYS
# ===========================================
# OpenAI API Key (required for embeddings and LLM)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Anthropic API Key (for Claude integration)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Optional: Google AI API Key (for Gemini integration)
GOOGLE_AI_API_KEY=your-google-ai-key-here

# ===========================================
# DATABASE - PostgreSQL with pgvector
# ===========================================
DATABASE_URL=postgresql+asyncpg://jdjones:your_secure_password@localhost:5432/jd_jones_rag
POSTGRES_USER=jdjones
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=jd_jones_rag
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# CHROMADB
# ===========================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./data/chroma

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# ===========================================
# LLM SETTINGS
# ===========================================
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ===========================================
# RAG SETTINGS
# ===========================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIEVAL_RESULTS=10
MIN_RELEVANCE_SCORE=0.7

# ===========================================
# SUPER MEMORY SETTINGS
# ===========================================
MEMORY_MAX_PER_USER=10000
MEMORY_CACHE_TTL=3600
MEMORY_SIMILARITY_THRESHOLD=0.92
AUTO_SYNC_ENABLED=true
SYNC_BATCH_SIZE=100

# ===========================================
# CELERY SETTINGS
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===========================================
# CORS SETTINGS
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8000"]

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.txt,.md,.xlsx,.xls,.pptx,.csv
